---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  class?: string;
}

const { name, class: className } = Astro.props;
---

<i
  class="inline-flex size-14 items-center justify-center overflow-hidden rounded-full bg-white text-2xl dark:bg-black"
>
  <Icon name={name} class={className} />
</i>
