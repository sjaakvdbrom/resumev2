---
import Card from "@components/Card.astro";
import {
  getContributionsDays,
  getContributionsCount,
} from "@/utils/contributions";

const contributions = await getContributionsDays(160);
const contributionsAmount = await getContributionsCount();

const lastDay = new Date(contributions[contributions.length - 1].date).getDay();
const remainingDays = 6 - lastDay;
---

<Card
  class="relative flex flex-col items-start justify-between gap-4 overflow-hidden lg:gap-10"
>
  {
    contributions && (
      <div class="absolute inset-0 w-full justify-start opacity-15 lg:relative lg:justify-end lg:opacity-100">
        <div class="grid -scale-100 grid-flow-col grid-rows-7 gap-1 lg:translate-x-10">
          {[...Array(remainingDays)].map(() => (
            <div class="aspect-square w-full rounded bg-contributions-0 lg:size-[10px] lg:rounded-[2px]" />
          ))}
          {contributions.reverse().map((item) => (
            <div
              class="aspect-square w-full rounded lg:size-[10px] lg:rounded-[2px]"
              class:list={[
                { "bg-contributions-0": item.level === 0 },
                { "bg-contributions-1": item.level === 1 },
                { "bg-contributions-2": item.level === 2 },
                { "bg-contributions-3": item.level === 3 },
                { "bg-contributions-4": item.level === 4 },
              ]}
            />
          ))}
        </div>
      </div>
    )
  }
  <div class="relative z-10 flex flex-col lg:gap-1">
    {
      contributionsAmount && (
        <p class="text-lg dark:text-neutral-400">{`${contributionsAmount} contributions`}</p>
      )
    }
    <h2 class="text-2xl">Op github</h2>
  </div>
</Card>
