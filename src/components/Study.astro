---
import Section from '@components/Section.astro';
import Card from '@components/Card.astro';
---

<Section class="lg:row-start-2 col-span-full lg:col-span-4" title="Opleiding">
  <Card class="flex flex-col items-start gap-4">
    <div class="inline-flex items-center bg-white dark:bg-black rounded-full py-1 px-3 text-sm">
      2010-2014
    </div>
    <h2 class="text-2xl">Friesland College</h2>
    <p>Media Vormgeving</p>
    <ul class="flex flex-col gap-2 list-disc list-inside marker:text-neutral-400">
      <li class="list-item">
        <div class="inline-flex items-center gap-4">
          <span>ICT- en mediabeheer (MBO-4)</span>
        </div>
      </li>
    </ul>
  </Card>
</Section>
