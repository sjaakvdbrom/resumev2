---
import Card from '@components/Card.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  item: CollectionEntry<'experience'>;
}

const { item } = Astro.props;
const { data: experience } = item;
---


<Card class="flex flex-col gap-4">
  <h2 class="text-2xl">{experience.title}</h2>
  <p>{experience.description}</p>
  <ul class="flex flex-col gap-2 list-disc list-inside marker:text-neutral-400">
    { experience?.functions.map( ( job ) => (
      <li class="list-item">
        <div class="inline-flex items-center gap-4">
          <span>{job.title}</span>
          <div class="inline-flex items-center bg-white dark:bg-black rounded-full py-1 px-3 text-sm">
            {`${job.from} - ${job.to}`}
          </div>
        </div>
      </li>
    )) }
  </ul>
</Card>