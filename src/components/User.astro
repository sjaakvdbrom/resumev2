---
import Card from '@components/Card.astro';
import avatar from '@assets/avatar.jpg';
import Availability from '@components/Availability.astro';
import { getEntry } from 'astro:content';
import { Image } from "@unpic/astro";

const profile = await getEntry('about', 'profile');
---

<Card class="col-span-full lg:col-span-6 flex flex-col items-start gap-4">
  <Image src={avatar} width={84} height={84} priority layout="fixed" alt="Avatar" class="rounded-full border-4 border-white dark:border-black" />
  <Availability />
  <div class="flex flex-col gap-2">
    { profile.data?.name && <h1 class="text-3xl">{ profile.data.name }</h1> }
    { profile.data?.tagline && <p class="text-lg">{ profile.data.tagline }</p> }
    { profile.data?.location && <p class="dark:text-neutral-400">üåç { profile.data.location }</p> }
  </div>
</Card>
